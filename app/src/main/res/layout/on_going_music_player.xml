<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lists_bg"
    android:orientation="vertical"
    android:padding="3dp">

    <ImageView
        android:id="@+id/onGoingImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:foreground="@drawable/image_foreground_ring_white_small"
        tools:srcCompat="@tools:sample/avatars[1]" />


    <jattbrand.projectDj6.Adapters.CustomTextView
        android:id="@+id/onGoingName"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/onGoingImage"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/onGoingPlayBtn"
        android:layout_toEndOf="@+id/onGoingImage"
        android:textColor="@color/whiteCream" />

    <jattbrand.projectDj6.Adapters.CustomTextView
        android:id="@+id/onGoingArtist"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/onGoingName"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/onGoingPlayBtn"
        android:layout_toEndOf="@+id/onGoingImage"
        android:textColor="@color/whiteCream"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/onGoingPlayBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/onGoingImage"
        android:layout_alignBottom="@+id/onGoingImage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/transparent"
        android:padding="14dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/play_solid" />
</RelativeLayout>